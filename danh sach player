-- ==================================================
--  PLAYER COUNT UI + AUTO HOP LOWEST SERVER (CORE)
--  Author: You
-- ==================================================

-- ===== ANTI DUPLICATE =====
if getgenv().AUTO_HOP_CORE then return end
getgenv().AUTO_HOP_CORE = true

-- ===== WAIT UNTIL FULLY JOINED (BLOX FRUITS SAFE) =====
repeat task.wait() until game:IsLoaded()

local Players = game:GetService("Players")
local TeleportService = game:GetService("TeleportService")
local HttpService = game:GetService("HttpService")

local LocalPlayer = Players.LocalPlayer
repeat task.wait() until LocalPlayer

-- đợi chọn phe
repeat task.wait() until LocalPlayer.Team ~= nil

-- đợi nhân vật spawn
repeat task.wait() until LocalPlayer.Character
repeat task.wait() until LocalPlayer.Character:FindFirstChild("HumanoidRootPart")

-- đợi PlayerGui
repeat task.wait() until LocalPlayer:FindFirstChild("PlayerGui")

task.wait(1) -- buffer an toàn

-- ===== CONFIG =====
local PLACE_ID = game.PlaceId
local JOB_ID = game.JobId

local HOP_DELAY = 30        -- hop mỗi 30s
local RETRY_DELAY = 3       -- delay retry nếu fail
local MAX_PAGES = 5         -- ~500 server

-- ===== UI =====
local gui = Instance.new("ScreenGui")
gui.Name = "AutoHopUI"
gui.ResetOnSpawn = false
gui.Parent = LocalPlayer.PlayerGui

local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0,260,0,120)
frame.Position = UDim2.new(0,20,0.35,0)
frame.BackgroundColor3 = Color3.fromRGB(20,20,20)
frame.BorderSizePixel = 0
frame.Active = true
frame.Draggable = true

local info = Instance.new("TextLabel", frame)
info.Size = UDim2.new(1,-10,1,-10)
info.Position = UDim2.new(0,5,0,5)
info.BackgroundTransparency = 1
info.TextWrapped = true
info.TextXAlignment = Enum.TextXAlignment.Left
info.TextYAlignment = Enum.TextYAlignment.Top
info.TextColor3 = Color3.fromRGB(255,255,255)
info.Font = Enum.Font.SourceSans
info.TextSize = 14

local function setUI(text)
    info.Text = text
end

-- ===== FIND BEST SERVER (STABLE) =====
local function findBestServer()
    while true do
        local bestOpenServer, bestOpenCount
        local bestAnyServer, bestAnyCount
        local cursor = ""
        local success = false

        setUI(
            "Players here: "..#Players:GetPlayers()..
            "\nSearching servers..."
        )

        for page = 1, MAX_PAGES do
            local url =
                "https://games.roblox.com/v1/games/"..PLACE_ID..
                "/servers/Public?sortOrder=Asc&limit=100&cursor="..cursor

            local ok, res = pcall(function()
                return HttpService:JSONDecode(game:HttpGet(url))
            end)

            if not ok or not res or not res.data then
                break
            end

            success = true

            for _, s in ipairs(res.data) do
                if s.id ~= JOB_ID then
                    -- server còn slot
                    if s.playing < s.maxPlayers then
                        if not bestOpenCount or s.playing < bestOpenCount then
                            bestOpenCount = s.playing
                            bestOpenServer = s.id
                        end
                    end
                    -- fallback server ít người nhất
                    if not bestAnyCount or s.playing < bestAnyCount then
                        bestAnyCount = s.playing
                        bestAnyServer = s.id
                    end
                end
            end

            cursor = res.nextPageCursor
            if not cursor then break end
        end

        if bestOpenServer then
            setUI(
                "Players here: "..#Players:GetPlayers()..
                "\nFound OPEN server"..
                "\nPlayers: "..bestOpenCount..
                "\nTeleporting..."
            )
            return bestOpenServer
        end

        if bestAnyServer then
            setUI(
                "Players here: "..#Players:GetPlayers()..
                "\nNo open server"..
                "\nFallback server"..
                "\nPlayers: "..bestAnyCount..
                "\nTeleporting..."
            )
            return bestAnyServer
        end

        if not success then
            setUI("HTTP failed...\nRetrying in "..RETRY_DELAY.."s")
        else
            setUI("No server found...\nRetrying in "..RETRY_DELAY.."s")
        end

        task.wait(RETRY_DELAY)
    end
end

-- ===== MAIN LOOP =====
task.spawn(function()
    while true do
        task.wait(HOP_DELAY)
        local serverId = findBestServer()
        TeleportService:TeleportToPlaceInstance(PLACE_ID, serverId, LocalPlayer)
        break
    end
end)
