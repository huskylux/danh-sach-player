--================= AUTO HOP + RETRY (FIXED) =================--
task.spawn(function()

    -- â± Chá» 65 giÃ¢y Ä‘áº§u tiÃªn
    task.wait(65)

    -- ğŸ” Sau 65s: thá»­ teleport liÃªn tá»¥c má»—i 1s
    while true do

        -- â— ChÆ°a cÃ³ server thÃ¬ chá»
        if not ServerList[1] then
            task.wait(1)
            continue
        end

        -- ğŸš€ Thá»­ teleport
        local ok, err = pcall(function()
            TeleportService:TeleportToPlaceInstance(
                PlaceId,
                ServerList[1].id,
                LP
            )
        end)

        if ok then
            -- âœ… Gá»i teleport thÃ nh cÃ´ng
            -- Roblox sáº½ tá»± chuyá»ƒn server â†’ script dá»«ng táº¡i Ä‘Ã¢y
            warn("âœ… Teleport started â†’", ServerList[1].id)
            break
        else
            -- âŒ Teleport lá»—i â†’ retry sau 1s
            warn("âŒ Teleport failed, retry in 1s:", err)
            task.wait(1)
        end
    end
end)
